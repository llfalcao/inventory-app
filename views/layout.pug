  body
    div(class='container-fluid')
      div(class='row')
        div(class='shadow col-sm-2 p-2 vh-100 sidebar-wrapper')
          block sidebar
            ul(class='nav nav-pills flex-column p-0 pt-1 h-100')
              li(class='nav-item mx-2 my-1')
                a(
                  href='/inventory'
                  class='nav-link rounded rounded-3 text-dark'
                )
                  svg(
                    xmlns='http://www.w3.org/2000/svg'
                    width='16'
                    height='16'
                    fill='currentColor'
                    class='bi bi-house-door'
                    viewBox='0 0 16 16'
                  )
