extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', name='name' value=(undefined===product ? '' : product.name))
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', name='description' value=(undefined===product ? '' : product.description))    
    div.form-group
      label(for='category') Category:
      select#category.custom-select(name="category")
        each category in categories
          option(value=category.name) #{category.name}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='text', name='price' value=(undefined===product ? '' : product.price))
    div.form-group
      label(for='number-in-stock') Number in stock:
      input#number-in-stock.form-control(type='text', name='number_in_stock' value=(undefined===product ? '' : product.number_in_stock))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
